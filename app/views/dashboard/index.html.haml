.posts
  .btn-group
    %button.btn.btn-default.dropdown-toggle{ type: :button, 'data-toggle' => :dropdown }
      %i.ion-filing

    %ul.dropdown-menu
      = render partial: 'posts'

.menu
  .btn-group
    %button.btn.btn-default.dropdown-toggle{ type: :button, 'data-toggle' => :dropdown }
      %i.ion-navicon-round

    %ul.dropdown-menu.pull-right
      %li.preview= link_to 'Preview', 'javascript:void(0)', target: :_blank
      %li.publish= link_to 'Publish', 'javascript:void(0)'
      %li.divider
      %li.save= link_to 'Save', 'javascript:void(0)'
      %li.destroy= link_to 'Delete', 'javascript:void(0)'
      %li.divider
      %li.fullscreen.expand= link_to 'Full Screen', 'javascript:void(0)'
      %li.contrast.contrast-light= link_to 'Contrast', 'javascript:void(0)'

= form_for(post, remote: true, authenticity_token: true) do |f|
  = f.text_field :title, placeholder: 'Buzzword filled title'
  = f.text_area :content, placeholder: 'Try to write something interesting'

.bottom
  .notices
  .counts
    %span.words 0 Words
    %span.characters 0 Characters
