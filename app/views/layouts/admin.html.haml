!!!
%html
  %head
    %title Blog Administration
    = stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Lato:300,400,700'
    = stylesheet_link_tag    :application, media: :all, 'data-turbolinks-track' => true
    = javascript_include_tag :application, 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body.admin.bootstrap-enabled
    %nav.navbar.navbar-default.navbar-fixed-top
      .navbar-header
        %button.navbar-toggle{ data: { toggle: :collapse, target: '#bs-collapse-menu' } }
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        = link_to 'Dashboard', '#', class: 'navbar-brand'

      #bs-collapse-menu.collapse.navbar-collapse
        %form.navbar-form.navbar-left
          .form-group= text_field_tag 'new-post', nil, class: 'form-control col-5', placeholder: "What will you write today?", autofocus: true
        = link_to 'Sign out', destroy_user_session_path, class: 'btn btn-default navbar-btn pull-right'

    = yield
